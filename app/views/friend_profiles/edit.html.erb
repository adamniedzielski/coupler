<h1>Edit profile</h1>

<ul>
  <% @friend_profile.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for @friend_profile do |f| %>
  <%= f.label :name %> <%= f.text_field :name %>
  <br>
  <%= f.label :description %> <%= f.text_area :description %>
  <br>
  <%= f.submit "Change" %>
<% end %>
